# Vext RAG System Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys
GROQ_API_KEY=your_groq_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here  # Optional: Only needed if switching back to OpenAI

# Server Configuration
PORT=3000

# Vector Database Configuration
CHROMA_URL=http://3.6.147.238:8000

# Embedding Configuration
# Options: 'huggingface' (default, uses all-MiniLM-L6-v2) or 'openai' (uses text-embedding-ada-002)
EMBEDDING_PROVIDER=huggingface

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# OCR Configuration
OCR_MODEL=mistral-ocr-latest
OCR_INCLUDE_IMAGES=false
OCR_MAX_FILE_SIZE=52428800
OCR_MAX_PAGES=1000

# AI Model Configuration
AI_MODEL=llama-3.3-70b-versatile
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Optional: Logging Configuration
# LOG_LEVEL=info
# LOG_FILE=logs/app.log 